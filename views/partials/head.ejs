<!-- Custom CSS for Stylish Alert -->
<style>
  /* Stylish Alert Customization */
  #autoDismissAlert {
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 1050;
    background: linear-gradient(135deg, #e0c3fc, #8ec5fc);
    color: #fff;
    border: none;
    border-radius: 8px;
    padding: 15px 25px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    opacity: 1;
    transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
  }

  /* Transition effect when dismissing the alert */
  #autoDismissAlert.hide {
    opacity: 0;
    transform: translateY(-20px);
  }
</style>

<!-- Auto-dismiss Script for the Alert -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const alertElement = document.getElementById("autoDismissAlert");
    if (alertElement) {
      // Start fade-out after 3 seconds
      setTimeout(function () {
        alertElement.classList.add("hide");
        // Remove the element from the DOM after the transition completes (500ms)
        setTimeout(function () {
          alertElement.remove();
        }, 500);
      }, 3000);
    }
  });
</script>
