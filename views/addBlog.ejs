<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Blog Post | InKspire</title>

    <link rel="stylesheet" href="/css/addBlog.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <!-- Quill Rich Text Editor -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
  </head>
  <body>
    <%- include("./partials/loader") %>

    <%- include("./partials/nav") %>

    <div class="blog-form-page">
      <div class="blog-form-container">
        <div class="blog-form-card">
          <div class="blog-form-header">
            <h1 class="blog-form-title">Create Your Blog Post</h1>
            <p class="blog-form-subtitle">Share your thoughts, ideas, and stories with our community</p>
          </div>
          
          <div class="blog-form-body">
            <form action="/blog/addBlog" method="post" enctype="multipart/form-data" id="blogForm">
              <!-- Cover Image Upload -->
              <div class="blog-form-group">
                <label for="coverImage" class="blog-form-label">Cover Image</label>
                <div class="blog-file-wrapper">
                  <div class="blog-file-control">
                    <i class="fa-solid fa-cloud-arrow-up blog-file-icon"></i>
                    <span class="blog-file-text">Click or drop files to upload</span>
                  </div>
                  <input
                    type="file"
                    class="blog-file-input"
                    id="coverImage"
                    name="coverImage"
                    accept="image/*"
                  />
                </div>
                <span class="blog-help-text">Recommended size: 1200x630 pixels (16:9 ratio)</span>
                
                <div class="blog-image-preview" id="imagePreview">
                  <img id="previewImg" class="blog-preview-img" src="#" alt="Preview" />
                  <div class="blog-preview-overlay" id="removePreview">
                    <i class="fa-solid fa-xmark"></i>
                  </div>
                </div>
              </div>
              
              <!-- Blog Title -->
              <div class="blog-form-group">
                <div class="d-flex justify-content-between">
                  <label for="title" class="blog-form-label">Title</label>
                  <span class="blog-char-counter"><span id="titleCounter">0</span>/100</span>
                </div>
                <input
                  type="text"
                  class="blog-form-control"
                  placeholder="What's your blog post about?"
                  id="title"
                  name="title"
                  maxlength="100"
                />
                <span class="blog-help-text">Create a compelling title that captures attention</span>
              </div>
              
              <!-- Blog Content -->
              <div class="blog-form-group">
                <label for="editor" class="blog-form-label">Content</label>
                <div id="editor"></div>
                <input type="hidden" name="body" id="hiddenContent">
                <span class="blog-help-text">Express yourself - tell your story with detail and clarity</span>
              </div>
              
              <!-- Submit Button -->
              <div class="blog-form-actions">
                <button type="submit" class="blog-submit-button" id="submitBtn">
                  <span>Publish Post</span>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include("./partials/footer") %>

    <%- include("./partials/script") %>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Initialize Quill editor with simplified toolbar
        var quill = new Quill('#editor', {
          theme: 'snow',
          modules: {
            toolbar: [
              ['bold', 'italic', 'underline'],        // B I U
              [{ 'header': [1, 2, false] }],          // H
              [{ 'list': 'ordered'}, { 'list': 'bullet' }],  // ordered and unordered lists

            ]
          },
          placeholder: 'Start writing your blog post...'
        });
        
        // When form is submitted, update the hidden input with editor content
        const form = document.getElementById('blogForm');
        form.addEventListener('submit', function(e) {
          document.getElementById('hiddenContent').value = quill.root.innerHTML;
          
          // Simple validation
          if(quill.getText().trim().length < 10) {
            e.preventDefault();
            alert('Your blog content is too short. Please write more.');
            return false;
          }
        });
      
      });


      document.addEventListener('DOMContentLoaded', function() {
        const fileInput = document.getElementById('coverImage');
        const fileWrapper = document.querySelector('.blog-file-wrapper');
        const fileText = document.querySelector('.blog-file-text');
        
        // Make the whole wrapper clickable
        fileWrapper.addEventListener('click', function() {
          fileInput.click();
        });
        
        // Handle file selection
        fileInput.addEventListener('change', function() {
          if (this.files && this.files) {
            fileText.textContent = this.files.name;
            // Here you would typically either submit the form or use AJAX to upload
          }
        });
        
        // Handle drag and drop
        fileWrapper.addEventListener('dragover', function(e) {
          e.preventDefault();
          fileWrapper.classList.add('dragover');
        });
        
        fileWrapper.addEventListener('dragleave', function() {
          fileWrapper.classList.remove('dragover');
        });
        
        fileWrapper.addEventListener('drop', function(e) {
          e.preventDefault();
          fileWrapper.classList.remove('dragover');
          
          if (e.dataTransfer.files && e.dataTransfer.files) {
            fileInput.files = e.dataTransfer.files;
            fileText.textContent = e.dataTransfer.files.name;
            // Here you would typically either submit the form or use AJAX to upload
          }
        });
      });
      document.addEventListener('DOMContentLoaded', function() {
        // Image Preview Functionality
        const coverImage = document.getElementById('coverImage');
        const imagePreview = document.getElementById('imagePreview');
        const previewImg = document.getElementById('previewImg');
        const removePreview = document.getElementById('removePreview');
        
        coverImage.addEventListener('change', function(event) {
          const file = event.target.files[0];
          if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
              previewImg.src = e.target.result;
              imagePreview.style.display = 'block';
              imagePreview.classList.add('fade-in');
            };
            reader.readAsDataURL(file);
          }
        });
        
        removePreview.addEventListener('click', function() {
          imagePreview.style.display = 'none';
          coverImage.value = '';
        });
        
        // Title Character Count
        const title = document.getElementById('title');
        const titleCounter = document.getElementById('titleCounter');
        
        title.addEventListener('input', function() {
          const count = this.value.length;
          titleCounter.textContent = count;
          
          if (count > 80) {
            titleCounter.style.color = '#f59e0b';
          } else {
            titleCounter.style.color = '';
          }
        });
        
        // Form Submission
        const blogForm = document.getElementById('blogForm');
        const submitBtn = document.getElementById('submitBtn');
        const editor = document.getElementById('editor');
        const hiddenContent = document.getElementById('hiddenContent');
        
        blogForm.addEventListener('submit', function(e) {
          // Update hidden input with editor content
          hiddenContent.value = editor.innerHTML;
          
          // Change button state
          submitBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Publishing...';
          submitBtn.disabled = true;
        });
      });
      
      // Rich Text Editor Functions
      function execCmd(command, value = null) {
        document.execCommand(command, false, value);
        document.getElementById('editor').focus();
      }
    </script>
        <%- include("./partials/footer") %>

    
    <style>
      /* Add these styles to make the editor look like a textarea */
      .blog-editor {
        min-height: 250px;
        text-align: left;
        overflow-y: auto;
        padding: 12px;
        outline: none;
        white-space: pre-wrap;
      }
      
      .blog-editor:focus {
        border-color: #4f46e5;
        box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.25);
      }
      
      .blog-editor-button.active {
        background-color: #e0e7ff;
        color: #4f46e5;
      }
    </style>
  </body>
</html>