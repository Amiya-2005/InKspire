<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SignUp | InKspire</title>
    <link rel="stylesheet" href="/css/signup.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>
  <body>
    <%- include("./partials/loader") %>

    <%- include("./partials/nav") %>

    <div class="signup-container">
      <div class="signup-wrapper">
        <div class="signup-card">
          <div class="signup-header">
            <h2>Create Your Account</h2>
            <p>Join InKspire and start your creative journey</p>
          </div>
          
          <form action="/user/signup" method="post" id="signupForm" class="signup-form">
            <div class="form-group">
              <div class="input-wrapper">
                <i class="fas fa-user input-icon"></i>
                <input
                  type="text"
                  name="fullName"
                  id="fullName"
                  placeholder="Full Name"
                  required
                  minlength="2"
                  maxlength="50"
                />
                <div class="input-error">Name must be 2-50 characters long</div>
              </div>
            </div>

            <div class="form-group">
              <div class="input-wrapper">
                <i class="fas fa-envelope input-icon"></i>
                <input
                  type="email"
                  name="email"
                  id="email"
                  placeholder="Email Address"
                  required
                  pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                />
                <div class="input-error">Please enter a valid email address</div>
              </div>
              <small class="form-hint">We will send an email to this address whenever your profile is updated.</small>
            </div>

            <div class="form-group">
              <div class="input-wrapper">
                <i class="fas fa-lock input-icon"></i>
                <input
                  type="password"
                  name="password"
                  id="password"
                  placeholder="Create Password"
                  required
                  minlength="8"
                />
                <span class="password-toggle">
                  <i class="fas fa-eye-slash"></i>
                </span>
                <div class="input-error">Password must be at least 8 characters</div>
              </div>
              <div class="password-strength">
                <div class="strength-bar"></div>
                <div class="strength-text"></div>
              </div>
            </div>

            

            <button type="submit" class="signup-button">
              Create Account
            </button>
          </form>

          <div class="signup-footer">
            <p>Already have an account? <a href="/user/login">Log In</a></p>
          </div>
        </div>

        <div class="signup-decorative-elements">
          <div class="circle circle-1"></div>
          <div class="circle circle-2"></div>
          <div class="circle circle-3"></div>
        </div>
      </div>
    </div>

    <%- include("./partials/script") %>
    <script src="/js/signup.client.js"></script>
    <%- include("./partials/footer") %>
  </body>
</html>